extends ./index

block contenido
    .flex.justify-end.mb-4
        ul.flex.space-x-4
            li 
                a(href="/profesores/creaProfesoresCurso"     class="text-green-600 hover:text-green-800") Agregar Profesor
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Proyecto
            span.font-normal Universidad
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method='POST' action='/cursos/listarProfesoresxCursoResult/' noValidate)
                    
                    div 
                        label.block.text-sm.uppercase.text-gray-500.md-3.font-bold(for="profesor_id") Profesor
                        select(name="id")
                            each profesor in profesores 
                                option(value=profesor.id) #{profesor.nombre} #{profesor.apellido} 

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Buscar los Cursos")