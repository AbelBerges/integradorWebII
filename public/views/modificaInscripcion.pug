extends ./index
block contenido 
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Proyecto 
            span.font-normal Universidad
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow 
                form(method='POST' action=`/inscripciones/${inscripcion.curso_id}/${inscripcion.estudiante_id}?_method=PUT`)
                    - var elcursoid = `${inscripcion.curso_id}`;
                    - var elestudianteid = `${inscripcion.estudiante_id}`;
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="curso_id") Curso
                        each curso in cursos 
                            if (curso.id == elcursoid)
                                label.block.text-sm.uppercase.text-gray-800.mb-3.font-bold #{curso.nombre}

                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="estudiante_id") Estudiante
                        each estudiante in estudiantes 
                            if (estudiante.id == elestudianteid)
                                label.block.text-sm.uppercase.text-gray-800.mb-3.font-bold #{unEstudiante}

                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="nota") Nota
                        input#nota.w.full.px-3.py-2.border.border-gray-300.rounded-mb.placeholder-gray-400(placeholder="Nota" type="text" name="nota" value=inscripcion.nota)

                    button.bg-blue-500.text-white.px-4.py-2.rounded-md.mt-4(type="submit") Modificar Inscripci√≥n  